  <div class="container-fluid">
    <!-- Logo -->
    <a class="navbar-brand" href="#">
      <%= image_tag("LOGO.jpeg", alt: "Universidad Tres Culturas", class: "img-fluid", style: "max-height: 50px;") %>
    </a>

