<p style="color: green"><%= notice %></p>

<% content_for :title, "Cursos" %>

<h1>Cursos</h1>

<div class="row">
  <% @cursos.each do |curso| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        
        <div class="card-body">
          <h5 class="card-title"> <%= raw curso.title%> </h5>
          
          <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <%= link_to 'Ver', curso_path(curso), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Editar', edit_curso_path(curso), class: "btn btn-sm btn-outline-secondary" %>
            </div>
            <small class="text-muted"><%= time_ago_in_words(curso.created_at) %> atr√°s</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "Nuevo curso", new_curso_path, class: "btn btn-primary" %>
